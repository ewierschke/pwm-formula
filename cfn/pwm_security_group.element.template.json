{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "ConnectCMDB": {
      "Fn::Equals": [
        {
          "Ref": "ConnectCMDB"
        },
        "true"
      ]
    },
    "NoELB": {
      "Fn::Equals": [
        {
          "Ref": "UseELB"
        },
        "false"
      ]
    },
    "NoConnectCMDB": {
      "Fn::Equals": [
        {
          "Ref": "ConnectCMDB"
        },
        "false"
      ]
    },
    "UseELB": {
      "Fn::Equals": [
        {
          "Ref": "UseELB"
        },
        "true"
      ]
    }
  },
  "Description": "This templates creates one security group for pwm instances, and one for their load balancer",
  "Outputs": {
    "pwmElbSecurityGroupId": {
      "Condition": "UseELB",
      "Description": "Security Group ID for the pwm Elastic Load Balancer",
      "Value": {
        "Ref": "pwmElbSecurityGroup"
      }
    },
    "pwmSecurityGroupId": {
      "Description": "Security Group ID for the pwm instances",
      "Value": {
        "Ref": "pwmSecurityGroup"
      }
    }
  },
  "Parameters": {
    "UseELB": {
      "AllowedValues": [
        "false",
        "true"
      ],
      "Default": "true",
      "Description": "Set to true if using an ELB in front of pwm; otherwise set to false",
      "Type": "String"
    },
    "ConnectCMDB": {
      "AllowedValues": [
        "true",
        "false"
      ],
      "Default": "false",
      "Description": "Set to true if wishing to allow port 22 connections from component security group; otherwise set to false",
      "Type": "String"
    },
    "CMDBSecurityGroup": {
      "AllowedPattern": "^$|^sg-(?=(?:.{8}|.{17})$)[a-z0-9]*$",
      "Default": "",
      "Description": "Security Group id of CMDB system from the peered account (Example: sg-12345678).",
      "Type": "String"
    },
    "VPC": {
      "Description": "VPC ID",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "CMDBTopwmIngressTcp22": {
      "Condition": "ConnectCMDB",
      "Properties": {
        "FromPort": "22",
        "GroupId": {
          "Ref": "pwmSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Ref": "CMDBSecurityGroup"
        },
        "ToPort": "22"
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "ElbTopwmEgressTcp80": {
      "Condition": "UseELB",
      "Properties": {
        "DestinationSecurityGroupId": {
          "Ref": "pwmSecurityGroup"
        },
        "FromPort": "80",
        "GroupId": {
          "Ref": "pwmElbSecurityGroup"
        },
        "IpProtocol": "tcp",
        "ToPort": "80"
      },
      "Type": "AWS::EC2::SecurityGroupEgress"
    },
    "ElbTopwmIngressTcp80": {
      "Condition": "UseELB",
      "Properties": {
        "FromPort": "80",
        "GroupId": {
          "Ref": "pwmSecurityGroup"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Ref": "pwmElbSecurityGroup"
        },
        "ToPort": "80"
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "PublicToElbIngressTcp443": {
      "Condition": "UseELB",
      "Properties": {
        "CidrIp": "0.0.0.0/0",
        "FromPort": "443",
        "GroupId": {
          "Ref": "pwmElbSecurityGroup"
        },
        "IpProtocol": "tcp",
        "ToPort": "443"
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "pwmElbSecurityGroup": {
      "Condition": "UseELB",
      "Properties": {
        "GroupDescription": "Enable pwm ELB access from the Internet",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  "pwm-elb-",
                  {
                    "Ref": "AWS::StackName"
                  }
                ]
              ]
            }
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "pwmSecurityGroup": {
      "Properties": {
        "GroupDescription": "Enable pwm access from ELB",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  "pwm-",
                  {
                    "Ref": "AWS::StackName"
                  }
                ]
              ]
            }
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    }
  }
}
